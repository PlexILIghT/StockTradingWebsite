{% extends 'base.html.twig' %}

{% block title %}Stock Exchange - Profile page{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Hello, {{ user.username }}!</h1>
    {% set count = 0 %}
    {% for portfolio in user.portfolios %}
        {% for depositary in portfolio.depositaries %}
            {% set count = count + depositary.quantity %}
        {% endfor %}
    {% endfor %}

    {% if user.getPortfolios() is empty %}
    <h2>You do not have any portfolios yet :(</h2>
    {% else %}
    <h2>You have {{user.getPortfolios().count()}} portfolios:</h2>

    {% for portfolio in user.getPortfolios() %}
        <span class="profile-portfolio">
            <p>ID: {{ portfolio.getId() }}</p>
            <p>Balance: {{ portfolio.getBalance() }}</p>
        </span>
    {% endfor %}

    {% endif %}

    <h2>Your total stock quantity is {{count}}</h2>

    <span>
        {{ include('portfolio/new.html.twig', { form: form }) }}
    </span>
</div>
{% endblock %}
